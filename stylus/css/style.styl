html, body
  height 100%
  background-color black
  background-image url('/images/game.png')
  background-repeat repeat
  background-attachment scroll
  color white

#game_of_life
  border 1px solid black
  background-color white
  margin 10px
#display_table tr td
  text-align center
td.select_on, td.select_off
  width 10px
  height 10px
  border 1px solid #444444
td.select_on
  background-color black
td.select_off
  background-color white
div.template_pick
  padding 2px
  text-align left
div.template_selected
  background-color #0033dd
a
  color #19A8B3
h1
  font-size 2em
p
  padding-bottom 5px
label
  padding-bottom 3px
.hidden
  display:none
.main
  background-color white
  color black
  border-left solid 10px gray
  border-right solid 10px gray
  min-height 100%
  width 960px
  margin 0 auto
.main-inner
  padding 20px
.banner
  font-size 2em
  a
    color black
ul.nav
  margin-bottom 20px
  li
    display inline
    margin-right 10px
.right
  float right
.left
  float left
a
  color #285369
  font-weight bold
  text-decoration none
#info_display tr td
  border 1px solid black
  padding 4px
.scroll-pane
  width 300px
  height 400px
  overflow auto
  background-color #aaaaaa
  padding 10px
